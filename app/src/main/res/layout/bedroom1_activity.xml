<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bedroom1"
    android:background="#3c3b37">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffa500"
        android:orientation="horizontal">

        <TextView
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="AWS Status:" />

        <TextView
            android:id="@+id/tvStatus1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="Disconnected" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:background="#3c3b37">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="BED ROOM-1"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#ffa500"/>

        <ToggleButton
            android:id="@+id/btnConnectR1"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:textOff="."
            android:textOn="."
            android:textColor="#ffffff"
            android:onClick="connectClick"
            android:background="@drawable/aws" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:background="#3c3b37"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/yellowbedroom2" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="Status:"
                    android:textColor="#ffa500" />

                <ImageView
                    android:id="@+id/imageViewLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/light_off" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/btnLight_r1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="onToggleClickedLight"
                    android:textOff="Turn LIGHT OFF"
                    android:textOn="Turn LIGHT ON" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="Status:"
                    android:textColor="#ffa500" />

                <ImageView
                    android:id="@+id/imageViewLamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/light_off" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/btnLampR1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textOff="Turn LAMP OFF"
                    android:textOn="Turn LAMP ON" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="Status:"
                    android:textColor="#ffa500" />

                <ImageView
                    android:id="@+id/imageViewAC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/acoff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/btnACR1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="onToggleClickedAC"
                    android:textOff="Turn AC OFF"
                    android:textOn="Turn AC ON" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="Status:"
                    android:textColor="#ffa500" />

                <ImageView
                    android:id="@+id/imageViewTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/tvoff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/btnTVR1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="onToggleClickedTV"
                    android:textOff="Turn TV OFF"
                    android:textOn="Turn TV ON" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>




    <!--    <include layout="@layout/view_thumb_text_seekbar" />-->


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="104dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewFan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/fan2" />
    </LinearLayout>


    <TextView
        android:id="@+id/number_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="SLOW" />

    <SeekBar
        android:id="@+id/sbProgress"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:max="3"
        android:minHeight="20dp" />


    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btnfanonR1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAN ON" />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btnFanoffR1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:onClick="connectClick"
        android:text="FAN OFF"
        android:background="#acaca7"/>



</LinearLayout>